@model Biblioteca.Models.Libros

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Libros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Existencias_Libro" class="control-label"></label>
                <input asp-for="Existencias_Libro" class="form-control" />
                <span asp-validation-for="Existencias_Libro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_Libro" class="control-label"></label>
                <input asp-for="Precio_Libro" class="form-control" />
                <span asp-validation-for="Precio_Libro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion_Libro" class="control-label"></label>
                <input asp-for="Descripcion_Libro" class="form-control" />
                <span asp-validation-for="Descripcion_Libro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutorId" class="control-label"></label>
                <select asp-for="AutorId" class ="form-control" asp-items="ViewBag.AutorId">
                    @foreach (var item in @ViewBag.Autores)
                    {
                      <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EditorialId" class="control-label"></label>
                <select asp-for="EditorialId" class ="form-control" asp-items="ViewBag.EditorialId">
                    @foreach (var item in @ViewBag.Editoriales)
                    {
                      <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId" class ="form-control" asp-items="ViewBag.GeneroId">
                    @foreach (var item in @ViewBag.Generos)
                    {
                      <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
