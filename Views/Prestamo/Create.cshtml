@model Biblioteca.Models.Prestamo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prestamo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha_Prestamo" class="control-label"></label>
                <input asp-for="Fecha_Prestamo" class="form-control" />
                <span asp-validation-for="Fecha_Prestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion_Prestamo" class="control-label"></label>
                <input asp-for="Descripcion_Prestamo" class="form-control" />
                <span asp-validation-for="Descripcion_Prestamo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LibrosId" class="control-label"></label>
                  <select  asp-for="LibrosId">
                    @foreach (var item in @ViewBag.Libros)
                    {
                      <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DocentesId" class="control-label"></label>
                  <select  asp-for="DocentesId">
                    @foreach (var item in @ViewBag.Docentes)
                    {
                      <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
